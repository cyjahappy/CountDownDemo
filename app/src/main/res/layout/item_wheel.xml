<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
    >
    <com.weigan.loopview.LoopView
        android:id="@+id/loopView_hour"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:awv_textsize="35"
        app:awv_centerTextColor ="@color/black"
        app:awv_outerTextColor ="@color/gray"
        app:awv_isLoop="true"
        app:awv_unit ="@string/hour"
        tools:ignore="MissingConstraints"/>

    <com.weigan.loopview.LoopView
        android:layout_weight="1"
        android:id="@+id/loopView_min"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:awv_centerTextColor ="@color/black"
        app:awv_outerTextColor ="@color/gray"
        app:awv_textsize="35"
        app:awv_unit ="@string/min"
        app:awv_isLoop="true"
        tools:ignore="MissingConstraints"/>

    <com.weigan.loopview.LoopView
        android:layout_weight="1"
        android:id="@+id/loopView_sec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:awv_centerTextColor ="@color/black"
        app:awv_outerTextColor ="@color/gray"
        app:awv_unit ="@string/sec"
        app:awv_textsize="35"
        app:awv_isLoop="true"
        tools:ignore="MissingConstraints"/>

</LinearLayout>